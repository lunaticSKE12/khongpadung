    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F57C00" />
            <stroke
                android:width="1dp"
                android:color="#F57C00"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#FF9800" />
            <stroke
                android:width="1dp"
                android:color="#FF9800"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

</selector>