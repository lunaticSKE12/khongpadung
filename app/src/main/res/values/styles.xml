<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/orange</item>
    </style>


    <style name="AppThemeForProductDetail" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.Button.Orange" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_15_size</item>
    </style>

    <style name="RSURegular">
        <item name="fontPath">fonts/RSU_Regular.ttf</item>
    </style>

</resources>
